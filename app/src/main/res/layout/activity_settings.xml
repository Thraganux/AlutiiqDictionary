<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.alutiiqlanguageproject.alutiiqdictionary.Settings"
    android:background="@drawable/bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <TextView android:text="@string/settings_welcome" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_size"/>

    <TextView
        android:text="@string/visual_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/whiteTrans"
            ></Spinner>

        <TextView
            android:text="@string/dictionary_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/chooseNorth"
                android:text="Alutiiq North"
                android:textSize="@dimen/radio_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/chooseSouth"
                android:text="Alutiiq South"
                android:textSize="@dimen/radio_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/chooseBoth"
                android:text="Both Dialects"
                android:textSize="@dimen/radio_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </RadioGroup>

    </LinearLayout>

</RelativeLayout>
