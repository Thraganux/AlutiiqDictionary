<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alutiiqlanguageproject.alutiiqdictionary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.alutiiqlanguageproject.alutiiqdictionary.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.alutiiqlanguageproject.alutiiqdictionary.DictionaryActivity"
            android:label="@string/title_activity_dictionary"
            android:parentActivityName="android.app.ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.app.ListActivity" />
        </activity>
        <activity
            android:name="com.alutiiqlanguageproject.alutiiqdictionary.VocabListActivity"
            android:label="@string/title_activity_vocab_list"
            android:parentActivityName="android.app.ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.app.ListActivity" />
        </activity>
        <activity
            android:name="com.alutiiqlanguageproject.alutiiqdictionary.VocabPracticeActivity"
            android:label="@string/title_activity_vocab_practice"
            android:parentActivityName="android.app.ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.app.ListActivity" />
        </activity>
        <activity
            android:name="com.alutiiqlanguageproject.alutiiqdictionary.WordDetailActivity"
            android:label="@string/title_activity_word_detail"
            android:parentActivityName="android.app.ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.app.ListActivity" />
        </activity>
        <activity
            android:name="com.alutiiqlanguageproject.alutiiqdictionary.VocabView"
            android:label="@string/title_activity_vocab_view"
            android:parentActivityName="android.app.ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.app.ListActivity" />
        </activity>
        <activity
            android:name="com.alutiiqlanguageproject.alutiiqdictionary.Play"
            android:label="@string/title_activity_play" >
        </activity>
        <activity
            android:name="com.alutiiqlanguageproject.alutiiqdictionary.SplashActivity"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.alutiiqlanguageproject.alutiiqdictionary.Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName="android.app.MainActivity" >
        </activity>
    </application>

</manifest>